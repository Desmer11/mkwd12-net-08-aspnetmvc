@using Class04.Models.DtoModels
@model IEnumerable<CourseWithStudentsDto>

    <h1>Index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @* @item.Students => this will return the list itself not whats inside it iterated *@
                    @{
                        Html.RenderPartial("_PartialStudentsView", item.Students);
                    } 
                </td>
            </tr>
        }
        </tbody>


    </table>