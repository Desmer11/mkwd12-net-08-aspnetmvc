@model IEnumerable<StudentViewModel>

@{
    ViewData["Title"] = "Index Page";
}

<h1>Students Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Age</td>
                <td>@(string.IsNullOrEmpty(student.Email) ? "N/A" : student.Email)</td>
                <td>
                    <a style="margin-right:10px;" asp-action="GetStudentById" asp-route-id="@student.Id">Details (By Route)</a>
                    <a 
                        asp-action="GetStudentByQueryFilter" 
                        asp-route-fullName="@student.FullName" 
                        asp-route-age="@student.Age"
                    >Details (With Query)</a>
                </td>
            </tr>
        }
    </tbody>
</table>