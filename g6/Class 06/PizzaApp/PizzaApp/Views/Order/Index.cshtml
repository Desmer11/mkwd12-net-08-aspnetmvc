
@model List<OrderDetailsViewModel> 
@*In the controller we sent a list of a view model, that's why here we are waiting for a list of the view model*@
   
    <h2>There are @ViewData["NumberOfOrders"] orders made in our app</h2>
    <h3>@ViewData["Title"]</h3>
    <ol>

     <a asp-controller="Order" asp-action="CreateOrder">Create order</a>
    @for(int i=0; i < Model.Count; i++)
    {
        @*This is the example from the previous class*@
        @* <li>@Model.ElementAt(i).PizzaName - @Model.ElementAt(i).UserFullName - @Model.ElementAt(i).Price</li> *@
        <partial name="~/Views/Shared/Partials/_OrderDetailsPartial.cshtml" for="@Model[i]"/>
        <a asp-controller="Order" asp-action="Details" asp-route-id="@Model[i].Id">Show details</a>
        <a asp-controller="Order" asp-action="EditOrder" asp-route-id="@Model[i].Id">Edit</a>
        <a asp-controller="Order" asp-action="DeleteOrder" asp-route-id="@Model[i].Id">Delete</a>
    }
</ol>
